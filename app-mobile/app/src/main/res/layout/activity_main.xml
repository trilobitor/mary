<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Naglowek: Rejestruj konto (tlo Teal #008080) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tytul"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#008080"
        android:padding="16dp" />

    <!-- Etykieta: Podaj e-mail -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_email"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />

    <!-- Pole edycyjne: email -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:textColor="#000000" />

    <!-- Etykieta: Podaj haslo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_haslo"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Pole edycyjne: haslo (ukrywanie znakow) -->
    <EditText
        android:id="@+id/editHaslo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#000000" />

    <!-- Etykieta: Powtorz haslo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_powtorz_haslo"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Pole edycyjne: powtorz haslo (ukrywanie znakow) -->
    <EditText
        android:id="@+id/editPowtorzHaslo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#000000" />

    <!-- Przycisk ZATWIERDZ (wysrodkowany) -->
    <Button
        android:id="@+id/buttonZatwierdz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_zatwierdz"
        android:layout_gravity="center"
        android:layout_marginTop="24dp" />

    <!-- Obszar komunikatow (wysrodkowany) -->
    <TextView
        android:id="@+id/textKomunikat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/autor"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
